@model WalletsTracker.ViewModels.DetailsWalletsVM
@section itmesUl{
    <li><a asp-action="Index" asp-controller="Dashboard">الرئيسية</a></li>
    <li class="is-active"><a asp-action="Wallets" asp-controller="Dashboard">‌المحافظ</a></li>
}
<div class="main-content container-fluid">
    <div class="row">
        <div class="col-12 form-max-width my-4">
            <br>
            <h2>تفاصيل المحفظة</h2>
            <br>
            <table class="table table-striped table-responsive">
                <tbody>
                    <tr>
                        <th scope="row">عنوان المحفظة :</th>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <th scope="row">رقم المحفظة :</th>
                        <td>@Model.NumberPhone</td>
                    </tr>
                    <tr>
                        <th scope="row">رصيد المحفظة :</th>
                        <td>@Model.Balance </td>
                    </tr>

                    <tr>
                        <th scope="row"> نسخ الرقم :</th>
                        <td>
                            <button onclick="navigator.clipboard.writeText('@Model.NumberPhone');">
                                نسخ للحافظة
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <br />
            <hr />
            <h2>عمليات الشهر</h2>
            <br>
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>نوع العملية</th>
                        <th>تاريخ العملية</th>
                        <th>رصيد العملية</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Transactions == null && Model.Transactions.Count() == 0)
                    {
                        <tr>
                            <td colspan="3">لا يوجد عمليات خلال الشهر</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model.Transactions)
                        {
                            <tr>
                                <td>
                                    @item.TransactionType
                                </td>
                                <td>
                                    @item.TransactionDateTime
                                </td>
                                <td>
                                    @item.BalanceTransaction
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>